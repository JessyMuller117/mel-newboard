					<a href="#" class="btn btn-primary">Voir la fiche Client</a>
				</div>

			</div>
		</div>
		<div class="col-4">
			<div class="card bg-holo text-center">
				<div class="card-header text-white">
					Prochains Evenements
				</div>
				<div class="card-body">
					<h5 class="card-title text-white">{{last_evenement.nom}}</h5>
					<p class="card-text text-white">{{last_evenement.description}}</p>
					<a href="{{ path('app_evenement_show', {'id': last_evenement.id}) }}" class="btn btn-primary">Voir le profil</a>
				</div>
				<div class="card-footer text-white">
					{{last_evenement.date|date('m/d/Y', "Europe/Paris")}}
				</div>
			</div>
		</div>
	</div>
</section>

