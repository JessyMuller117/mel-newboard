{% extends 'base.html.twig' %}

{% block title %}Login
{% endblock %}

{% block body %}
	{% if error %}
		<div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
	{% endif %}

	<section class="container" id="section-login">
	<div class="row justify-content-center">
		<form class="col-6 formulaire-login" action="{{ path('login') }}" method="post">
			<label for="username">Email:</label>
			<input type="text" id="username" name="_username" value="{{ last_username }}"/>

			<label for="password">Password:</label>
			<input
			type="password" id="password" name="_password"/>

			{# If you want to control the URL the user is redirected to on success
					        <input type="hidden" name="_target_path" value="/account"/> #}
			<input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
			<button class="btn btn-secondary mt-3 w-25 mx-auto" type="submit">LOGIN</button>
		</form>
	</div>
	</section>
{% endblock %}
