{% extends 'base.html.twig' %}

{% block title %}Tous les utilisateurs
{% endblock %}

{% block body %}

<section id="page-list-utilisateur" class="mt-5 container-fluid">
<h1>Liste de tous les utilisateurs</h1>
	<div class="row">
		{% for user in users %}
			<div class="col-4">
				<div class="carte-user mt-3 mb-3 bg-light pt-3 pb-3 pl-3 pr-3">
					<div class="info d-flex justify-content-around">
						<span class="badge bg-dark">{{user.id}}</span>
						<div>
							{{user.email}}
						</div>
						<div>
							{{user.telephone}}
						</div>
					</div>
					<div class="identite text-center ">
						<p>
							{{user.nom}}
							
					
							{{user.prenom}}
						</p>
					</div>
					<div class="box-btn d-flex justify-content-center">
					<div style="margin-right:20px;">
						<a class="btn btn-info" href="{{ path('app_account_index', {'id': user.id}) }}">Voir le profil</a>
					</div>
					<div>
						<a class="btn btn-warning" href="{{ path('app_utilisateur_edit', {'id': user.id}) }}">edit</a>
					</div>
					</div>
				</div>
			</div>
		{% endfor %}
	</div>
</section {% endblock %}
